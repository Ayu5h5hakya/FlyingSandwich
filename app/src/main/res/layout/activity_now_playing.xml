<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_now_playing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ayush.flyingsandwich.NowPlayingActivity"
    android:background="@color/colorbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_circular_seeker"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_current_song"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginBottom="@dimen/songTitleBtmMargin"
        tools:text="This is a test"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/id_np_albumart_circle"
        android:scaleType="centerCrop"
        android:padding="@dimen/albumartPadding"
        android:src="@drawable/ic_album_art"/>

    <com.example.ayush.flyingsandwich.Provider.CircularSeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_circular_seeker"
        android:layout_centerInParent="true"
        app:circle_x_radius="150dp"
        app:circle_y_radius="150dp"
        app:use_custom_radii="true"
        app:start_angle="120"
        app:end_angle="60"
        app:circle_progress_color="@color/colorseeker"
        app:pointer_color="@color/colorseeker"
        app:circle_stroke_width="2dp"
        app:pointer_radius="0dp"
        app:pointer_halo_color="@color/colorseeker"
        app:max="100"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="start"
        android:layout_below="@+id/id_circular_seeker"
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/id_current_time"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_circular_seeker"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:text="end"
        android:layout_marginRight="110dp"
        android:layout_marginTop="-45dp"
        android:id="@+id/id_end_time"
        android:textColor="@android:color/white"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:layout_centerInParent="true"
        android:id="@+id/id_np_playpause"
        android:src="@drawable/pause_vector"
        app:backgroundTint="@color/colorselected"/>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/id_stake"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/id_np_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/np_fforward_vector"
        android:layout_toRightOf="@+id/id_stake"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"/>

    <ImageView
        android:id="@+id/id_np_rewind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@+id/id_stake"
        android:src="@drawable/np_rewind_vector"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:id="@+id/id_np_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_current_time"
        android:layout_toLeftOf="@+id/id_stake"
        android:src="@drawable/repeat_drawable"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/id_np_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id_stake"
        android:src="@drawable/shuffle_drawable"
        android:layout_below="@+id/id_end_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
