<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_now_playing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ayush.flyingsandwich.NowPlayingActivity"
    android:background="@color/colorbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_circular_seeker"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_current_song"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginBottom="35dp"
        tools:text="This is a test"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/id_np_albumart_circle"
        android:scaleType="centerCrop"
        android:padding="180dp"
        android:src="@drawable/ic_album_art"/>

    <com.example.ayush.flyingsandwich.Provider.CircularSeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_circular_seeker"
        android:layout_centerInParent="true"
        app:circle_x_radius="150dp"
        app:circle_y_radius="150dp"
        app:use_custom_radii="true"
        app:start_angle="120"
        app:end_angle="60"
        app:circle_progress_color="@color/colorseeker"
        app:pointer_color="@color/colorseeker"
        app:max="100"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="start"
        android:layout_below="@+id/id_circular_seeker"
        android:layout_marginTop="-55dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/id_current_time"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_circular_seeker"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:text="end"
        android:layout_marginRight="110dp"
        android:layout_marginTop="-55dp"
        android:id="@+id/id_end_time"
        android:textColor="@android:color/white"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:layout_centerInParent="true"
        android:id="@+id/id_np_playpause"/>

</RelativeLayout>
