<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorbackground">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_playpause"
        app:layout_constraintRight_toRightOf="@+id/id_selected_song_view"
        app:layout_constraintTop_toTopOf="@+id/id_selected_song_view"
        app:layout_constraintBottom_toBottomOf="@+id/id_playlist"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <include
        android:layout_width="0dp"
        android:layout_height="70dp"
        layout="@layout/view_selected_song"
        android:id="@+id/id_selected_song_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="384dp"
        android:layout_height="441dp"
        android:id="@+id/id_playlist"
        tools:listitem="@layout/view_selected_song"
        tools:layout_editor_absoluteY="0dp"

        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>